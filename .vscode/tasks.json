{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
              }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make",
            "args": [
                "run"
            ],
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ]
        },
        {
            "label": "free space left",
            "type": "shell",
            "command": "make",
            "args": [
                "spaceleft"
            ]
        }
    ]
}